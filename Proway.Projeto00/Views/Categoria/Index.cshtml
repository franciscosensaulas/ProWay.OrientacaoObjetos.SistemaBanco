@model List<CategoriaIndexViewModel> 

<div class="row">
    <div class="col-12 mb-3">
        <a asp-controller="Categoria" asp-action="Cadastrar"
            class="btn btn-primary float-end">
            <i class="fa-solid fa-plus"></i> Cadastrar</a>
    </div>
</div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var categoria in Model){
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@categoria.Id"
                        class="btn btn-outline-warning">Editar</a>
                    <a asp-controller="Categoria" asp-action="Apagar" asp-route-id="@categoria.Id"
                        class="btn btn-outline-danger">Apagar</a>
                </td>
            </tr>           
            }
        </tbody>
    </table>